{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "sourceMap": true,
      "declaration": true,
      "removeComments": true,
      "noImplicitAny": true,
      "rootDir": ".",
      "outDir": "dist",
      "noEmit": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  },
  "exclude": [
      "node_modules"
  ]
}